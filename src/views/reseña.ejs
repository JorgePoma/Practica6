<%- include ('partials/_header'); -%>

<div class="container">
    <h1 style="text-align: center;" class="mt-4">Envianos tus Comentarios</h1>
    <div class="row mt-5">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/add-resenias" method="post">
                        <div class="form-group">
                            <label class="form-label mt-4">Correo:</label>
                            <input type="email" name="correo" placeholder="Correo" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-4">Mensaje:</label>
                            <textarea name="mensaje" placeholder="Mensaje" class="form-control" rows="3"></textarea>
                        </div>
                          <div class="mt-4" style="text-align: center;">
                            <button type="submit" class="btn btn-primary">
                                Enviar
                              </button>
                          </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<%- include ('partials/_footer'); -%>