<%- include ('partials/_header'); -%>

<div class="container">
    <h1 style="text-align: center;" class="mt-4">Registro de cuentas</h1>
    <div class="row mt-5">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <label class="form-label mt-4"><font style="vertical-align: inherit;">Nùmero de cèdula:</font></label>
                            <input type="text" name="numero" placeholder="Cl" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-4"><font style="vertical-align: inherit;">Nombre del propietario:</font></label>
                            <input type="text" name="propietario" placeholder="Propietario" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="tipo" class="form-label mt-4"><font style="vertical-align: inherit;">Selecciona tipo de cuenta:</font></label>
                            <select class="form-select" id="tipo" name="tipo">
                              <option value="Ahorro"><font style="vertical-align: inherit;">Ahorro</font></option>
                              <option value="Corriente"><font style="vertical-align: inherit;">Corriente</font></option>
                            </select>
                          </div>
                          <div class="mt-4" style="text-align: center;">
                            <button type="submit" class="btn btn-primary">
                                Registrar
                              </button>
                          </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col md-7" >
            <table class="table table-bordered table-hover"style="text-align:center">
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Propietario</th>
                        <th>Tipo</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (usuario) { %>
                        <% for(var i = 0; i < usuario.length; i++){ %>
                            <tr>
                                <td> <%= usuario[i].numero %> </td>
                                <td> <%= usuario[i].propietario %> </td>
                                <td> <%= usuario[i].tipo %> </td>
                                <td> <a href="/delete/<%= usuario[i].numero %>" class="btn btn-secondary">Eliminar</a>  </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>




<%- include ('partials/_footer'); -%>

