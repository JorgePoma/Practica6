<%- include ('partials/_header'); -%>

<div class="container">
    <h1 style="text-align: center;" class="mt-4">Registrar Familiares</h1>
    <div class="row mt-5">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add-familiar" method="post">
                        <div class="form-group">
                            <label class="form-label mt-4">Nùmero de cèdula:></font></label>
                            <input type="text" name="cedula" placeholder="Cl" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-4">Nombre:</font></label>
                            <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-4">Apellido:</font></label>
                            <input type="text" name="apellido" placeholder="Apellido" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-4">Correo:</font></label>
                            <input type="email" name="email" placeholder="Correo" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="tipo" class="form-label mt-4"><font style="vertical-align: inherit;">Parentesco:</font></label>
                            <select class="form-select" id="parentesco" name="parentesco">
                              <option value="Padre/Madre"><font style="vertical-align: inherit;">Padre/Madre</font></option>
                              <option value="Esposo/Esposa"><font style="vertical-align: inherit;">Esposo/Esposa</font></option>
                              <option value="Hijo/Hija"><font style="vertical-align: inherit;">Hijo/Hija</font></option>
                            </select>
                          </div>
                          <div class="mt-4" style="text-align: center;">
                            <button type="submit" class="btn btn-primary">
                                Registrar
                              </button>
                          </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col md-7" >
            <table class="table table-bordered table-hover"style="text-align:center">
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Nombres</th>
                        <th>Correo</th>
                        <th>Parentesco</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (familiar) { %>
                        <% for(var i = 0; i < familiar.length; i++){ %>
                            <tr>
                                <td> <%= familiar[i].cedula %> </td>
                                <td> <%= familiar[i].nombre %> <%= familiar[i].apellido %></td>
                                <td> <%= familiar[i].email %> </td>
                                <td> <%= familiar[i].parentesco %> </td>
                                <td> <a href="/delete-familiar/<%= familiar[i].cedula %>" class="btn btn-secondary">Eliminar</a>  </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>




<%- include ('partials/_footer'); -%>